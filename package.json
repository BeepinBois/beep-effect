{
  "private": true,
  "type": "module",
  "name": "@beep/root",
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "pnpm": "10.15.0"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "tooling/*"
  ],
  "repository": {
    "repository": {
      "type": "git",
      "url": "https://github.com/BeepinBois/beep-effect.git",
      "directory": "."
    }
  },
  "scripts": {
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo run clean",
    "build": "pnpm dotenvx turbo run build",
    "execute": "pnpm dotenvxturbo run execute",
    "check": "turbo run check",
    "check:all": "turbo run lint check test",
    "db:generate": "turbo run db:generate",
    "db:migrate": "pnpm dotenvx turbo run db:migrate",
    "db:push": "pnpm dotenvx turbo run db:push",
    "db:nuke": "docker compose down && docker system prune -a -f && docker volume prune -a -f",
    "db:exec": "pnpm dotenvx docker compose exec -it postgres '/bin/bash'",
    "db:studio": "pnpm dotenvx turbo run  db:studio",
    "db:up": "pnpm dotenvx docker compose up -d",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "coverage": "vitest --coverage",
    "prepare": "husky",
    "dev": "pnpm dotenvx turbo run dev --concurrency=14",
    "dotenvx": "dotenvx run -f .env --",
    "lint:deps": "pnpm syncpack lint --dependency-types=dev,prod,peer",
    "lint:deps:fix": "pnpm syncpack fix --dependency-types=dev,prod,peer",
    "deps:update": "pnpm syncpack update --target=latest --dependency-types=dev,prod,peer"
  },
  "dependencies": {
    "tsx": "^4.20.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@biomejs/biome": "^2.2.0",
    "@dotenvx/dotenvx": "^1.49.0",
    "@effect/language-service": "^0.35.2",
    "@effect/vitest": "^0.25.1",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "^3.2.4",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "effect": "^3.17.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "syncpack": "14.0.0-alpha.19",
    "tsx": "^4.20.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*": [
      "biome check"
    ],
    "**/*.{ts,tsx,js,jsx,cjs,mjs}": [
      "biome check"
    ]
  },
  "trustedDependencies": [
    "@rocicorp/zero-sqlite3"
  ]
}
