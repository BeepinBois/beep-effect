{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["vitest.config.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../shared"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@beep/kernel": ["./src/index"],
      "@beep/kernel/*": ["./src/*"],
      "@beep/shared": ["../shared/src/index"],
      "@beep/shared/*": ["../shared/src/*"]
    }
  }
}
