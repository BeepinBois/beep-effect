{
  "name": "@beep/kernel",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The kernel package. A cross cutting concern for domain layers",
  "repository": {
    "type": "git",
    "url": "https://github.com/BeepinBois/beep-effect.git",
    "directory": "packages/kernel"
  },
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "dev": "tsc -b tsconfig.build.json --watch",
    "test": "vitest run",
    "clean": "rm -rf node_modules build .turbo .tsbuildinfo",
    "coverage": "vitest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "dependencies": {
    "@beep/shared": "workspace:*",
    "@effect/experimental": "^0.54.3",
    "@effect/platform": "^0.90.0",
    "@effect/sql": "^0.44.0",
    "effect": "^3.17.6",
    "uuid": "^11.1.0"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  },
  "devDependencies": {
    "@effect/build-utils": "^0.8.9"
  }
}
