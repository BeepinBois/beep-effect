{
  "name": "@beep/better-auth",
  "version": "0.0.0",
  "type": "module",
  "license": "MIT",
  "description": "The better auth adapter for Beep",
  "publishConfig": {
    "access": "restricted",
    "directory": "build"
  },
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./*": "./src/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BeepinBois/beep-effect.git",
    "directory": "packages/adapters/better-auth"
  },
  "scripts": {
    "auth:generate": "pnpm dotenvx pnpx @better-auth/cli@latest generate --config 'src/server.ts' --output './src/internal/_generated.schema.ts' --y && pnpm lint:fix",
    "build": "pnpm build-esm && pnpm build-cjs && pnpm build-annotate",
    "dev": "tsc -b tsconfig.build.json --watch",
    "build-esm": "tsc -b tsconfig.build.json",
    "build-cjs": "babel build/esm --plugins @babel/transform-export-namespace-from --plugins @babel/transform-modules-commonjs --out-dir build/cjs --source-maps",
    "build-annotate": "babel build/esm --plugins annotate-pure-calls --out-dir build/esm --source-maps",
    "check": "tsc -b tsconfig.json",
    "test": "vitest run",
    "clean": "rm -rf .tsbuildinfo node_modules coverage .next out dist build .turbo",
    "coverage": "vitest --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "dotenvx": "dotenvx run -f ../../../.env --"
  },
  "peerDependencies": {
    "@beep/iam-domain": "workspace:^",
    "@beep/iam-tables": "workspace:^",
    "@beep/iam-db": "workspace:^",
    "@beep/env": "workspace:^",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "dub": "^0.65.1",
    "@dub/better-auth": "^0.0.3",
    "better-auth": "^1.3.6",
    "effect": "^3.17.7",
    "drizzle-orm": "^0.44.4",
    "@simplewebauthn/server": "^13.1.2",
    "@better-auth/stripe": "^1.3.6",
    "zod": "^4.0.17",
    "stripe": "^18.4.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.5"
  },
  "effect": {
    "generateExports": {
      "include": [
        "**/*.ts"
      ]
    },
    "generateIndex": {
      "include": [
        "**/*.ts"
      ]
    }
  }
}
