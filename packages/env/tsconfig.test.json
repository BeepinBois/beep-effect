{
  "extends": "../../tsconfig.base.json",
  "include": ["test"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../common/schema"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true
  },
  "paths": {
    "@beep/env": ["./src/index"],
    "@beep/env/*": ["./src/*"],
    "@beep/schema": ["../common/schema/src/index"],
    "@beep/schema/*": ["../common/schema/src/*"]
  }
}
