{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../schema"
    },
    {
      "path": "../utils"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/logos/*": ["./src/*"],
      "@beep/types": ["../types/src/index"],
      "@beep/types/*": ["../types/src/*"],
      "@beep/utils": ["../utils/src/index"],
      "@beep/utils/*": ["../utils/src/*"],
      "@beep/schema": ["../schema/src/index"],
      "@beep/schema/*": ["../schema/src/*"]
    }
  }
}
