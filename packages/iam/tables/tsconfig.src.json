{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../../shared/tables"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/iam-tables/*": ["./src/*"],
      "@beep/shared-tables": [
        "../../shared/tables/src/index"
      ],
      "@beep/shared-tables/*": [
        "../../shared/tables/src/*"
      ]
    }
  }
}
