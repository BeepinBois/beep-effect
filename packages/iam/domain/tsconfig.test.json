{
  "extends": "../../../tsconfig.base.json",
  "include": ["test"],
  "references": [
    {
      "path": "tsconfig.src.json"
    },
    {
      "path": "../../shared/domain"
    },
    {
      "path": "../../common/schema"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "noEmit": true
  },
  "paths": {
    "@beep/iam-domain": ["./src/index"],
    "@beep/iam-domain/*": ["./src/*"],
    "@beep/shared-domain": ["../../shared/domain/src/index"],
    "@beep/shared-domain/*": ["../../shared/domain/src/*"],
    "@beep/schema": ["../../common/schema/src/index"],
    "@beep/schema/*": ["../../common/schema/src/*"]
  }
}
