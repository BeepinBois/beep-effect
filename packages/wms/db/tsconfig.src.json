{
  "extends": "../../../tsconfig.base.json",
  "include": ["src"],
  "references": [
    {
      "path": "../tables"
    },
    {
      "path": "../../persistence/db-scope"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@beep/wms-db/*": ["./src/*"],
      "@beep/wms-tables": ["../tables/src/index"],
      "@beep/wms-tables/*": ["../tables/src/*"],
      "@beep/db-scope": ["../../persistence/db-scope/src/index"],
      "@beep/db-scope/*": ["../../persistence/db-scope/src/*"]
    }
  }
}
