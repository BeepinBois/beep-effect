{
  "extends": "../../tsconfig.base.json",
  "include": ["test", "test/**/*.json", "test/*.*.json"],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../invariant"
    },
    {
      "path": "../utils"
    },
    {
      "path": "../schema"
    }
  ],
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "test",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "paths": {
    "@/*": ["./src/*"],
    "@beep/logos": ["./src/index"],
    "@beep/logos/*": ["./src/*"],
    "@beep/types": ["../types/src/index"],
    "@beep/types/*": ["../types/src/*"],
    "@beep/invariant": ["../invariant/src/index"],
    "@beep/invariant/*": ["../invariant/src/*"],
    "@beep/utils": ["../utils/src/index"],
    "@beep/utils/*": ["../utils/src/*"],
    "@beep/schema": ["../schema/src/index"],
    "@beep/schema/*": ["../schema/src/*"]
  }
}
