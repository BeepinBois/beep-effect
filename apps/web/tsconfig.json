{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "baseUrl": ".",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "incremental": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@beep/ui": [
        "../../packages/ui/src/index"
      ],
      "@beep/ui/*": [
        "../../packages/ui/src/*"
      ],
      "@beep/utils": [
        "../../packages/common/utils/src/index"
      ],
      "@beep/utils/*": [
        "../../packages/common/utils/src/*"
      ],
      "@beep/types": [
        "../../packages/common/types/src/index"
      ],
      "@beep/types/*": [
        "../../packages/common/types/src/*"
      ],
      "@beep/invariant": [
        "../../packages/common/invariant/src/index"
      ],
      "@beep/invariant/*": [
        "../../packages/common/invariant/src/*"
      ],
      "@beep/schema": [
        "../../packages/common/schema/src/index"
      ],
      "@beep/schema/*": [
        "../../packages/common/schema/src/*"
      ],
      "@beep/logos": [
        "../../packages/common/logos/src/index"
      ],
      "@beep/logos/*": [
        "../../packages/common/logos/src/*"
      ],
      "@beep/rete": [
        "../../packages/common/rete/src/index"
      ],
      "@beep/rete/*": [
        "../../packages/common/rete/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      },
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": [
    ".",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".next",
    ".expo"
  ]
}
