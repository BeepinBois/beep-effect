{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../../packages/common"
    },
    {
      "path": "../utils"
    }
  ],
  "exclude": [
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "types": [
      "node"
    ],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@beep/repo-scripts/*": [
        "./src/*"
      ],
      "@beep/common": [
        "../../packages/common/src/index"
      ],
      "@beep/common/*": [
        "../../packages/common/src/*"
      ],
      "@beep/tooling-utils": [
        "../utils/src/index"
      ],
      "@beep/tooling-utils/*": [
        "../utils/src/*"
      ]
    }
  }
}
